{erl_opts, [debug_info, warn_unused, warn_shadow_vars]}.
{deps, [
    {zotonic_stdlib, "1.2.3"}
]}.

{profiles, [
    {test, [
        {plugins, [
            rebar3_proper
        ]},
		{deps, [
            {proper, "1.4.0"}
        ]},

        {xref_checks, [
            undefined_function_calls,
            locals_not_used,
            deprecated_function_calls
        ]},

        {xref_ignores, [
        ]},

        {dialyzer, [
          {warnings, [
              no_return
          ]}
        ]}
    ]},
	{doc_private, [
		{edoc_opts, [
			{private, true}
		]}
	]}
]}.

{project_plugins, [rebar3_hex, rebar3_ex_doc]}.

{edoc_opts, [
    {preprocess, true}, {stylesheet, "style.css"}
]}.

{hex, [
    {doc, #{provider => ex_doc}}
]}.

{ex_doc, [
    {extras, [
          {"README.md", #{title => "Overview"}},
          {"LICENSE", #{title => "License"}}
    ]},
    {main, "README.md"},
    {source_url, "https://github.com/zotonic/diffy"},
    {assets, "assets"},
    {api_reference, true}
]}.

